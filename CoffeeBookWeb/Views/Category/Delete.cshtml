@model Category

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Category</h2>
            <hr />
        </div>
        <div class="mb-2">
            <h4 class="text-muted">
                <label asp-for="Name"></label>
            </h4>
            <input asp-for="Name" class="form-control" disabled/>
        </div>
        <br />
        <div class="mb-2">
            <h4 class="text-muted">
                <label asp-for="DisplayOrder"></label>
            </h4>
            <input asp-for="DisplayOrder" class="form-control" disabled />
        </div>
        <h4 class="text-danger">Are you sure you want to delete this item?</h4>
        <br />
        <button type="submit" class="btn btn-warning" style="width:150px"><i class="bi bi-x-square"></i>&nbsp; Confirm</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
    </div>
</form>

@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}